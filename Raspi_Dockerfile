FROM arm32v6/python:3.8-alpine AS base
# You may need to adjust architecture of Python container
# above for your Raspberry Pi model. Above arch works for 
# Raspberry Pi Model B+ V1.2
RUN apk --no-cache add gcc musl-dev

# Create temporary container to build dependencies
FROM base AS python-deps
RUN pip install pipenv
COPY Pipfile .
COPY Pipfile.lock .
RUN PIPENV_VENV_IN_PROJECT=1 pipenv install --deploy

# Make runtime container
FROM base AS runtime
COPY --from=python-deps /.venv /.venv
ENV PATH="/.venv/bin:$PATH"
COPY config.json .
COPY secrets.json .
COPY discobot.py .
COPY .cache .

ENTRYPOINT ["python", "-u", "discobot.py"]
